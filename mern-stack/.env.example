# ====================================
# MERN STACK CONFIGURATION
# CodyMentor Learning Template
# ====================================

# SERVER CONFIGURATION
PORT=5000
NODE_ENV=development

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/mern_learning
# For production: mongodb+srv://user:password@cluster.mongodb.net/dbname

# JWT CONFIGURATION
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CLIENT CONFIGURATION
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_NAME="CodyMentor MERN App"

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000

# RATE LIMITING
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# LOGGING
LOG_LEVEL=info

# ====================================
# LEARNING NOTES:
# 1. Never commit .env files to version control
# 2. Use different secrets for different environments
# 3. Consider using a secret manager for production
# ====================================
